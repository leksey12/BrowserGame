@using Microsoft.AspNetCore.Identity
@model BrowserGame.ViewModels.ChangeRoleViewModel

<h2>Изменение роли для пользователя:</h2>
<h3>@Model.UserEmail</h3>


<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
    <a class="btn btn-sm btn-secondary" asp-action="Index">Назад</a>
</form>
